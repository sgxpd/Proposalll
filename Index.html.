<body>

  <h1>Will you be mine? ðŸ’–</h1>
  <img src="photo.jpg" alt="Cute photo" id="photo">
  
  <button id="startButton">Yes ðŸ’–</button>
  <audio id="yayySound" src="yayy.mp3"></audio>

  <div class="question" id="questionBox"></div>
  <div id="answerButtons"></div>

  <script>
    const startButton = document.getElementById('startButton');
    const sound = document.getElementById('yayySound');
    const questionBox = document.getElementById('questionBox');
    const answerButtons = document.getElementById('answerButtons');

    const questions = [
      "Do you want to hang out this weekend? ðŸ¥°",
      "Do you want to watch a movie together? ðŸ¿",
      "Do you want to go for a little adventure? ðŸŒ¸",
      "Yay! Can't wait to spend time with you! ðŸ’–"
    ];
    let currentQuestion = 0;

    function typeQuestion(text, callback) {
      questionBox.textContent = "";
      let i = 0;
      const interval = setInterval(() => {
        questionBox.textContent += text[i];
        i++;
        if (i === text.length) {
          clearInterval(interval);
          if (callback) callback();
        }
      }, 50);
    }

    function createHeart() {
      const heart = document.createElement('div');
      heart.className = 'heart';
      heart.textContent = 'ðŸ’–';
      heart.style.left = Math.random() * window.innerWidth + 'px';
      heart.style.top = window.innerHeight - 100 + 'px';
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 1000);
    }

    function showAnswers() {
      answerButtons.innerHTML = "";
      const yesBtn = document.createElement('button');
      yesBtn.textContent = "Yes ðŸ’–";
      const noBtn = document.createElement('button');
      noBtn.textContent = "No ðŸ˜¢";

      yesBtn.addEventListener('click', () => {
        sound.play();
        createHeart();
        nextQuestion();
      });
      noBtn.addEventListener('click', () => {
        questionBox.textContent = "Aww, maybe next time ðŸ˜¢";
        answerButtons.innerHTML = "";
      });

      answerButtons.appendChild(yesBtn);
      answerButtons.appendChild(noBtn);
    }

    function nextQuestion() {
      if(currentQuestion < questions.length) {
        typeQuestion(questions[currentQuestion], showAnswers);
        currentQuestion++;
      } else {
        questionBox.textContent = "Yay! Everything is perfect! ðŸ¥°";
        answerButtons.innerHTML = "";
      }
    }

    startButton.addEventListener('click', () => {
      sound.play();
      createHeart();
      startButton.style.display = 'none';
      nextQuestion();
    });
  </script>

</body>
